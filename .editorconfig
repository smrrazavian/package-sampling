# .editorconfig
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Markdown, YAML, JSON, and TOML use 2-space indentation
[*.{md,yml,yaml,json,toml}]
indent_size = 2

# Makefiles use tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
insert_final_newline = true
trim_trailing_whitespace = true
